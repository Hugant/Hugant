extends ../layouts/project

mixin progressBar(title, progress)
	.progress-container.progress-primary
		span.progress-badge=title
		.progress
			.progress-bar(role="progressbar" aria-valuenow="60" aria-valuemin="0"
				aria-valuemax="100" style=`width: ${progress}%;`)
				span.progress-value=progress + "%"

block variables
	-
		var projectId = "js-days"
		var active = true
		var title = "100 Days of JavaScript"
		var description = "Проект 100 Days of JavaScript - своеобразный " +
			"челлендж, который направлен на изучение языка программирования " +
			"JavaScript посресдством реализации собственных идей в различных " +
			"отраслях. Каждая такая реализация представляет собой мини-проект," +
			" именуемое как \"день\", на который вы можете перейти и посмотреть. " +
			"Помимо этого существует возможность ознакомиться с исходным код " +
			"каждого дня. С каждым разом я изучаю для себя что-то новое и тем " +
			"самым повышаю свои навыки и умения по работе с данной технологией, " +
			"из чего следует что чем дальше я продвигаюсь, тем все более сложные " +
			"и интересные задумки я буду реализовывать."


block links
	a.btn.btn-primary(href="https://100js.artyshko.ru" target="_target") Перейти на сайт
		a.btn.btn-primary(href="https://github.com/Hugant/100js-Days" target="_target")
			i.fa.fa-github
			span GitHub

block badges
	span.badge.badge-primary Pug
	span.badge.badge-primary CSS
	span.badge.badge-primary JavaScript
	span.badge.badge-primary Bootstrap

block progress-bars
	+progressBar("Прогресс реализации сайта для проекта", 90)
	+progressBar("Прогресс проекта", 20)

block slider
	include ../sliders/100js